    <script>
    function addToCart(pid) {
        $.ajax({
            url: "@Url.Action("addtocart", "Home")",
            type: "POST",
            data: { id: pid },
            dataType: "json",
            success: function (res) {
                document.getElementById("count").innerHTML = res.length;
            },



        })

    }

        function incrs_cart_qty(pid,index) {
            $.ajax({
            url: "@Url.Action("incrs_cart", "Home")",
            type: "POST",
            data: { id: pid },
            dataType: "json",
            success: function (res) {
                document.getElementsByClassName("inc_count")[index].innerHTML = res;
                window.location.reload();
            },
                })
        }


        function dcrs_cart_qty(pid,index) {
            $.ajax({
            url: "@Url.Action("dcrs_cart", "Home")",
            type: "POST",
            data: { id: pid },
            dataType: "json",
            success: function (res) {
                document.getElementsByClassName("dec_count")[index].innerHTML = res;
                window.location.reload();
            },
                })
        }
    </script>
    
