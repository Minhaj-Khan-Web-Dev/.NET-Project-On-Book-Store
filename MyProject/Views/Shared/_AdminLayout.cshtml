                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Category Info</a>
                        <div class="dropdown-menu bg-transparent border-0">

                            <a href="@Url.Action("Index","Category")" class="dropdown-item">Show Category</a>
