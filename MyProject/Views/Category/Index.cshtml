@model IEnumerable<MyProject.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List Of Categories</h2>

<p>
    @Html.ActionLink("Create New Category", "Create")
</p>
<table class="table table-bordered display" id="table_id">
    <thead>
        <tr style="color:white">
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color:white"> 
                <td>
                    @Html.DisplayFor(modelItem => item.CatName)
                </td>
                <td>
                    <img src="~/ProjectImages/@item.CatImage" style="height:100px; width:100px;" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new
                    {
                        id = item.CatId
                    }) |
                    @Html.ActionLink("Delete", "Delete", new
                    {
                        id = item.CatId
                    })
                </td>
            </tr>
        }
    </tbody>
</table>
