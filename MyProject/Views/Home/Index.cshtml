
	<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- shop -->
            @foreach (var item in ViewBag.CatData)
            {
                <div  class="col-md-4 col-xs-6">

                    <div class="shop">
                        <div class="shop-img">
                            <img src="~/ProjectImages/@item.CatImage" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>@item.CatName<br>Collection</h3>
                            
                            <a href="@Url.Action("CatWise","Home", new {Id = @item.CatId })" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>

                        </div>
                    </div>


                </div>
            }

            <!-- /shop -->

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
